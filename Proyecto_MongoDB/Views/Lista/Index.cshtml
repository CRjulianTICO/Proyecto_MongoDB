@model Proyecto_MongoDB.Models.ListaCarrosViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    Carros disponibles
</p>
<table class="table">
    <tr>
        <th>
            Marca
        </th>
        <th>
            Tipo
        </th>
        <th>
            Precio
        </th>
        <th>
            Cilindraje
        </th>
        <th>
            NoRegistracion
        </th>
        <th>
            DiaRegistracion
        </th>
        <th>
            Modelo
        </th>
        <th>
            Placa
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ListaCarros)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cilindraje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoRegistracion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaRegistracion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Placa)
        </td>
        <td>
            @Html.ActionLink("Comprar", "Create", "ListaComprados", new { @IDCarro = item.Id, @NombreComprador = User.Identity.Name }, new { @class = "btn btn-default" })
            @{/* Page.CurrentUser talvez sirva para conseguir el nombre del usuario que esta conectado*/}
        </td>
    </tr>
    }
</table>
